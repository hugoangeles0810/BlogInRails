<%= form_for @post, html: {role: "form"} do |f| %>
	<div class="form-group">
		<%= f.label :title %>
		<%= f.text_field :title, class: "form-control" %> 
	</div>
	
	<div class="form-group">
		<%= f.label :body %>
		<%= f.text_area :body, col: 10, row:10, class: "form-control" %>
	</div>

	<%= f.submit class: "btn btn-primary" %>
<% end %>